{% extends 'base.html.twig' %}

{% block title %}
	{{ 'ResetPassword' | trans }}
	|
	{{ 'AppName' | trans }}
{% endblock %}

{% block body %}

	<!-- <body data-layout="horizontal"> -->
	<div class="auth-page">
		<div class="container-fluid p-0">
			<div class="row g-0">
				<div class="col-xxl-3 col-lg-4 col-md-5">
					<div class="auth-full-page-content d-flex p-sm-5 p-4">
						<div class="w-100">
							<div class="d-flex flex-column h-100">
								<div class="mb-4 mb-md-5 text-center">
									<a href="index.html" class="d-block auth-logo">
										<img src="{{ asset('assets/images/logo-sm.svg') }}" alt="" height="28">
										<span class="logo-txt">{{ 'AppName' | trans }}</span>
									</a>
								</div>
								<div class="auth-content my-auto">
									<div class="text-center">
										<h5 class="mb-0">{{ 'ResetPassword' | trans }}</h5>
										<p class="text-muted mt-2">{{ 'EnterEmail' | trans }}</p>
									</div>

									{{ form_start(requestForm) }}
									{% for flashError in app.flashes('reset_password_error') %}
										<div class="alert alert-danger" role="alert">{{ flashError }}</div>
									{% endfor %}
									<div class="mb-3">
										<label class="form-label">{{ 'Email' | trans }}</label>
										{{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder':'Enter email'}}) }}
									</div>
									<div class="mb-3 mt-4">
										<button class="btn btn-primary w-100 waves-effect waves-light" type="submit">{{ 'Reset' | trans }}</button>
									</div>
									{{ form_end(requestForm) }}

									<div class="mt-5 text-center">
										<p class="text-muted mb-0">{{ 'RememberIt' | trans }}
											<a href="{{ path('app_login') }}" class="text-primary fw-semibold">
												{{ 'SignIn' | trans }}
											</a>
										</p>
									</div>
								</div>
								<div class="mt-4 mt-md-5 text-center">
									<p class="mb-0">Â©
										<script>
											document.write(new Date().getFullYear())
										</script>
										{{ 'AppName' | trans }}
										{# . {{ 'DesignDevelopedBy' | trans }} {{ 'AppAuthor' | trans }} #}
									</p>
								</div>
							</div>
						</div>
					</div>
					<!-- end auth full page content -->
				</div>
				<!-- end col -->
				<div class="col-xxl-9 col-lg-8 col-md-7">
					{% include 'security\\cover.security.html.twig' %}
				</div>
				<!-- end col -->
			</div>
			<!-- end row -->
		</div>
		<!-- end container fluid -->
	</div>
{% endblock %}
