{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 0, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th>
								Tipo de especificaci√≥n &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Ver especificaciones cargadas &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for specification_type in specification_types %}
							<tr>
								<td>
									{{specification_type.name}}
									&nbsp;
								</td>

								<td class="text-center">

									<a style="font-size:16px" class="text-primary m-2" href="{{ path('secure_crud_specification_index', {'specification_type_id': specification_type.id}) }}" title="Ver especificaciones cargadas.">
										<i class="fas fa-eye"></i>
									</a>
									
								</td>

							</tr>

						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
