{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_specification_new', {'specification_type_id': specification_type.id}) }}">Nueva especificación</a>
		</div>

	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 0, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th>
								Especificación &nbsp;
							</th>

							{% if (specification_type.name == 'Color') %}
								<th>
									Color &nbsp;
								</th>
							{% endif %}

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>
						</tr>
					</thead>
				</tr>
			</thead>
			<tbody>
				{% for specification in specifications %}
					<tr>
						<td>
							{{specification.name}}
							&nbsp;
						</td>

						{% if (specification_type.name == 'Color') %}
							<td>
								<div style="width:30px;height:30px; border-radius:30px; background-color:{{ specification.colorHexadecimal}};">
								</div>
								&nbsp;
							</td>
						{% endif %}

						<td class="text-center">

							<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_specification_edit', {'specification_id': specification.id}) }}" title="Editar especificación.">
								<i class="fas fa-edit"></i>
							</a>
						</td>

					</tr>

				{% endfor %}
			</tbody>
		</table>
	</div>
</div></div><div class="row mt-5 mb-5">
<div class="col-12 text-end">
	<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
</div></div>{% endblock %}{% block javascripts %}{{ parent() }}{% endblock %}
