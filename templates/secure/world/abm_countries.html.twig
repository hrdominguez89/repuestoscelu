{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_world_new_country') }}">Nuevo país</a>
		</div>

	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 1, &quot;asc&quot; ],[ 2, &quot;asc&quot; ],[ 3, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id. &nbsp;
							</th>

							<th>
								País &nbsp;
							</th>

							<th>
								Región &nbsp;
							</th>

							<th>
								Subregión &nbsp;
							</th>

							<th class="text-center">
								Visible &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for country in countries %}
							<tr>
								<td class="text-center">
									{{country.country_id}}
								</td>


								<td>
									{{country.country_name}}
								</td>

								<td>
									{{country.region_type_name}}
								</td>

								<td>
									{{country.subregion_type_name}}
								</td>

								<td class="text-center">
									<a style="font-size:16px" data-status="{{country.visible ? 'on':'off'}}" data-slug="/secure/world/updateVisible/Countries" data-id="{{country.country_id}}" class="text-{{country.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
										<i class="fas fa-toggle-{{country.visible ? 'on':'off'}}"></i>
									</a>
								</td>

								<td class="text-center">

									<a style="font-size:16px" class="text-primary m-2" href="{{ path('secure_crud_states_index', {'country_id': country.country_id}) }}" title="Ver estados">
										<i class="fas fa-eye"></i>
									</a>
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_world_edit_country', {'country_id': country.country_id}) }}" title="Editar País">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
