{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{parent()}}
	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_city_new',{'country_id':country.id,'state_id':state.id}) }}">Nueva ciudad</a>
		</div>

	</div>
	<div class="row mt-2">
		<div class="col-12">
			<h4>Pais:{{country.name}}</h4>
			<h4>Estado/Provincia:{{state.name}}</h4>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[1, &quot;asc&quot;]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id. &nbsp;
							</th>

							<th>
								Ciudad &nbsp;
							</th>

							<th class="text-center">
								Visible &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for city in cities %}
							<tr>
								<td class="text-center">
									{{city.id}}
								</td>


								<td>
									{{city.name}}
								</td>

								<td class="text-center">
									<a style="font-size:16px" data-status="{{city.visible ? 'on':'off'}}" data-slug="/secure/world/updateVisible/Cities" data-id="{{city.id}}" class="text-{{city.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
										<i class="fas fa-toggle-{{city.visible ? 'on':'off'}}"></i>
									</a>
								</td>

								<td class="text-center">
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_city_edit', {'country_id':country.id,'state_id':state.id,'city_id':city.id}) }}" title="Editar ciudad">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('secure_crud_states_index',{'country_id':country.id}) }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
