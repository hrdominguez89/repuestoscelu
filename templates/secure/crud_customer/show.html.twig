{% extends 'home/index.html.twig' %}

{% block title %}Cliente{% endblock %}

{% block content %}
    <h1>{{ customer.billingFirstName }} {{ customer.billingLastName }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Imagen</th>
            {% if customer.image %}
                <td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ asset(customer.image) }}"/></td>
            {% else %}
                <td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
            {% endif %} 
        </tr>
        <tr>
            <th>Identificación</th>
            <td>{{ customer.identification }}</td>
        </tr>
        <tr>
            <th>País</th>
            <td>{{ customer.billingCountry }}</td>
        </tr>
        <tr>
            <th>Provincia</th>
            <td>{{ customer.billingState }}</td>
        </tr>
        <tr>
            <th>Municipio</th>
            <td>{{ customer.billingCity }}</td>
        </tr>
        <tr>
            <th>Dirección</th>
            <td>{{ customer.billingAddress }}</td>
        </tr>
        <tr>
            <th>Código Postal</th>
            <td>{{ customer.billingPostcode }}</td>
        </tr>
        <tr>
            <th>Teléfono</th>
            <td>{{ customer.billingPhone }}</td>
        </tr>
        {# <tr>
            <th>Teléfono celulr</th>
            <td>{{ customer.cellPhone }}</td>
        </tr> #}
        <tr>
            <th>Oficina de retiro</th>
            <td>{{ customer.billingCompanyName }}</td>
        </tr>
        <tr>
            <th>Correo eletrónico</th>
            <td>{{ customer.billingEmail }}</td>
        </tr>
        </tbody>
    </table>
    <div class="d-inline-flex">
        <a style="width: 80px" class="btn btn-secondary m-1" href="{{ path('secure_crud_customer_index') }}">Regresar</a>
        <a style="width: 80px" class="btn btn-warning m-1" href="{{ path('secure_crud_customer_edit', {'id': customer.id}) }}">Editar</a>
        {{ include('secure/crud_customer/_delete_form.html.twig') }}
    </div>
{% endblock %}
