{# list of specifications #}
<div class="col-lg-6 col-md-6 col-sm-12">
	<div class="mb-3">
		<label class="form-label" data-key="t-especifications">{{ 'Especifications' | trans }}</label>
		<select class="form-select" id="especifications" name="especifications">
			{% for specification in specifications %}
				<option value="{{ specification.id }}">{{ specification.name }}</option>
			{% endfor %}
		</select>
	</div>
</div>

