{% extends 'home/index.html.twig' %}

{% block title %}Marca{% endblock %}

{% block content %}
    <h1>Marca</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Imagen</th>
                 {% if brand.image %}
                    <td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ asset(brand.image) }}"/></td>
                {% else %}
                    <td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
                {% endif %} 
            </tr>
            <tr>
                <th>Id de la Api</th>
                <td>{{ brand.apiId }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ brand.name }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-inline-flex">
        <a style="width: 80px" class="btn btn-secondary m-1" href="{{ path('secure_crud_brand_index') }}">Regresar</a>

        <a style="width: 80px" class="btn btn-warning m-1" href="{{ path('secure_crud_brand_edit', {'id': brand.id}) }}">Editar</a>
        {% if cantDelete %}
        {{ include('secure/crud_brand/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
