{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{parent()}}
	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>


		<div class="col-6 text-end">
			{% if sale_point is defined %}
				<a class="btn btn-success" href="{{ path('secure_product_new',{"sale_point":"sale_point"}) }}">Nuevo producto</a>
			{% else %}
				<a class="btn btn-success" href="{{ path('secure_product_new') }}">Nuevo producto</a>
			{% endif %}
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[1, &quot;asc&quot;]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id. &nbsp;
							</th>
							<th class="text-center">Fecha&nbsp;</th>
							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>
							{% if is_granted('ROLE_SUPER_ADMIN') %}
								<th class="text-center" data-orderable="false">
									Visible &nbsp;
								</th>
							{% endif %}

							{% if sale_point is defined %}
								<th>
									Punto de venta
								</th>
							{% endif %}

							<th>COD &nbsp;</th>

							<th>Nombre &nbsp;</th>

							<th>Descripción &nbsp;</th>

							<th>Marca &nbsp;</th>

							<th>Categoría &nbsp;</th>

							<th>Subcategoría &nbsp;</th>

						</tr>
					</thead>
					<tbody>
						{% for product in products %}
							<tr>
								<td class="text-center">
									{{product.id}}
								</td>

								<td data-order="{{product.product.createdAt ? product.product.createdAt|date('U'):0}}" class="text-center">{{product.product.createdAt ? product.product.createdAt|date("d/m/Y"):'-'}}</td>

								<td class="text-center">
									<a style="font-size:16px" class="text-primary m-2" href="{{ path('secure_product_tag',{"product_sale_point_id":product.id}) }}" title="Etiqueta de producto.">
										<i class="fas fa-tag"></i>
									</a>
								</td>

								{% if is_granted('ROLE_SUPER_ADMIN') %}
									<td class="text-center">
										<a style="font-size:16px" data-status="{{product.product.visible ? 'on':'off'}}" data-slug="/secure/product/updateVisible/product" data-id="{{product.id}}" class="text-{{product.product.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
											<i class="fas fa-toggle-{{product.product.visible ? 'on':'off'}}"></i>
										</a>
									</td>
								{% endif %}

								{% if sale_point is defined %}
									<td>
										{{product.product.salePoint.name}}
										-
										{{product.product.salePoint.state.name}}
										-
										{{product.product.salePoint.city.name}}
									</td>
								{% endif %}

								<td>{{product.product.salePoint.role.id == 1? 'A':product.product.salePoint.id}}-{{product.product.cod}}</td>

								<td>{{product.product.name}}</td>

								<td>{{product.product.description}}</td>

								<td>{{ product.product.brand.name}}</td>

								<td>{{product.product.category.name}}</td>

								<td>{{product.product.subcategory ? product.product.subcategory.name:''}}</td>

							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
