{% extends 'home/index.html.twig' %}
{% block title %}Usuario{% endblock %}

{% block content %}
    <h1>Usuario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Imagen</th>
                {% if user.image %}
                    <td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ asset(user.image) }}"/></td>
                {% else %}
                    <td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
                {% endif %} 
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ user.email }}</td>
            </tr>            
            <tr>
                <th>Nombre</th>
                <td>{{ user.name }}</td>
            </tr>
{#            <tr>#}
    {#                <th>Roles</th>#}
    {#                <td>{{ user.roles }}</td>#}
{#            </tr>#}
        </tbody>
    </table>
    <div class="d-inline-flex">
        <a class="btn btn-secondary m-1" href="{{ path('secure_crud_user_index') }}">Regresar</a>
        <a class="btn btn-warning m-1" href="{{ path('secure_crud_user_edit', {'id': user.id}) }}">Editar</a>
        {{ include('secure/crud_user/_delete_form.html.twig') }}
    </div>
{% endblock %}
