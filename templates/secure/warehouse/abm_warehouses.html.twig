{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{parent()}}
	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>


		<div class="col-6 text-end">
			<form method="post">
				<button class="btn btn-success" type="submit">Actualizar Warehouses e invetarios</button>
			</form>
		</div>
	</div>
	{% if message is defined %}
		<div class="mt-3 mb-3 alert alert-{{message['alert-color']}}">
			{{ message['message'] }}
		</div>
	{% endif %}
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[1, &quot;asc&quot;]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id Warehouse Bymia. &nbsp;
							</th>

							<th data-type="num" class="text-center">
								Id Warehouse 3PL &nbsp;
							</th>

							<th data-type="num" class="text-center">
								Id Inventario Bymia &nbsp;
							</th>

							<th data-type="num" class="text-center">
								Id Inventario 3PL &nbsp;
							</th>

							<th data-type="num" class="text-center">
								CÃ³d. de inventario &nbsp;
							</th>

							<th data-type="num" class="text-center">
								Nombre de inventario &nbsp;
							</th>

							<th data-type="num" class="text-center">
								Fecha alta inventario &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for warehouse in warehouses %}
							<tr>
								<td class="text-center">
									{{warehouse.warehouse_id_bymia}}
								</td>

								<td class="text-center">
									{{warehouse.warehouse_id_3pl}}
								</td>

								<td class="text-center">
									{{warehouse.inventory_id_bymia}}
								</td>

								<td class="text-center">
									{{warehouse.inventory_id_3pl}}
								</td>

								<td class="text-center">
									{{warehouse.inventory_cod}}
								</td>

								<td class="text-center">
									{{warehouse.inventory_name}}
								</td>

								<td class="text-center">
									{{warehouse.inventory_created_at|date("d/m/Y H:i:s")}}
								</td>

							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
