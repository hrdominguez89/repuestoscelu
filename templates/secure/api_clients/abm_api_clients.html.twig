{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{parent()}}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('new_api_clients') }}">Nuevo usuario API</a>
		</div>

	</div>

	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[1, &quot;asc&quot;]]">
					<thead>
						<tr>

							<th>
								Nombre &nbsp;
							</th>

							<th>
								API Client ID &nbsp;
							</th>

							<th>
								Rol &nbsp;
							</th>

							{# <th class="text-center">
								Estado &nbsp;
							</th> #}

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for api_cliente in api_clients %}
							<tr>

								<td>
									{{api_cliente.name}}
								</td>


								<td>
									{{api_cliente.apiClientId}}
								</td>

								<td>
									{{api_cliente.apiClientTypeRole.Name}}
								</td>

								{# <td
									class="text-center">
									<a style="font-size:16px" data-status="{{city.visible ? 'on':'off'}}" data-slug="/secure/world/updateVisible/Cities" data-id="{{city.id}}" class="text-{{city.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
																																																																						<i class="fas fa-toggle-{{city.visible ? 'on':'off'}}"></i>
																																																																					</a>
								</td> #}

								<td class="text-center">
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('edit_api_clients', {'id':api_cliente.id}) }}" title="Editar Usuario API">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
