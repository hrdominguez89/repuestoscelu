{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_cover_image_new') }}">Nuevo slider</a>
		</div>

	</div>
	<div class="row mt-2">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_reorder" data-slug="/secure/cover-image/updateOrder" class="table table-striped table-sm nowrap">
					<thead>
						<tr>
							<th style="width:10px;" data-type="num" class="text-center">
								Orden &nbsp;
							</th>

							<th data-type="num" class="text-center">
								ID
							</th>

							<th>
								Título
							</th>

							<th>
								Descripción
							</th>

							<th style="width:10px;">
								Visible &nbsp;
							</th>

							<th style="width:10px;" class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% set count = 1 %}
						{% for slider in sliders %}
							<tr>
								<td class="text-center">
									{{ count }}
								</td>

								<td class="text-center">
									{{ slider.id }}
								</td>

								<td>
									{{slider.title|raw}}
								</td>

								<td>
									{{slider.subtitle}}
								</td>


								<td class="text-center">
									<a style="font-size:16px" data-status="{{slider.visible ? 'on':'off'}}" data-slug="/secure/cover-image/updateVisible" data-id="{{slider.id}}" class="text-{{slider.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
										<i class="fas fa-toggle-{{slider.visible ? 'on':'off'}}"></i>
									</a>
								</td>

								<td class="text-center">
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_cover_image_edit',{"id":slider.id}) }}" title="Editar pregunta.">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
							{% set count = count + 1 %}
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
