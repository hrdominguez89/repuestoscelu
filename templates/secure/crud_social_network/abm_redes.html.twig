{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_social_network_new') }}">Nueva red social</a>
		</div>

	</div>
	<div class="row mt-2">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_simple" class="table table-striped table-sm nowrap">
					<thead>
						<tr>
							<th data-orderable="false">Icono</th>
							<th>Url</th>
							<th data-orderable="false">Color</th>

							<th style="width:10px;" class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for social_network in social_networks %}
							<tr>
								<td>
									<i class="{{ social_network.name }}"></i>
								</td>
								<td>{{ social_network.url }}</td>
								<td class="text-center">
									<span style="color: white; background-color: {{ social_network.color }}; width: 70px!important; padding: 1px; border-radius: 5px">{{ social_network.color }}</span>
								</td>
								<td style="width: 10px" class="text-center">
									<a title="Mostrar" style="font-size:16px" class="m-2" href="{{ path('secure_crud_social_network_show', {'id': social_network.id}) }}">
										<i class="fas fa-eye text-primary"></i>
									</a>
									<a title="Editar" style="font-size:16px" class="m-2" href="{{ path('secure_crud_social_network_edit', {'id': social_network.id}) }}">
										<i class="fas fa-edit text-warning"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
