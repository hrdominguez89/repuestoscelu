{% extends 'home/index.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{parent()}}

	<h1>{{title}}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Icono</th>
				<td>
					<i class="{{ social_network.name }}"></i>
				</td>
			</tr>
			<tr>
				<th>Url</th>
				<td>{{ social_network.url }}</td>
			</tr>
			<tr>
				<th>Color</th>
				<td>
					<span style="color: {{ social_network.color }}; background-color: {{ social_network.color }}; width: 50px!important; padding: 1px; border-radius: 5px">{{ social_network.color }}</span>
				</td>
			</tr>
		</tbody>
	</table>

	<div class="d-inline-flex">
		<a style="width: 90px" class="btn btn-secondary m-1" href="{{ path('secure_crud_social_network_index') }}">Regresar</a>

		<a style="width: 90px" class="btn btn-warning m-1" href="{{ path('secure_crud_social_network_edit', {'id': social_network.id}) }}">Editar</a>

		{{ include('secure/crud_social_network/_delete_form.html.twig') }}
	</div>
{% endblock %}
