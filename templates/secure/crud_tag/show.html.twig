{% extends 'home/index.html.twig' %}

{% block title %}Etiqueta{% endblock %}

{% block content %}
    <h1>Etiqueta</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Id de API</th>
                <td>{{ tag.apiId }}</td>
            </tr>
        </tbody>
    </table>

<div class="d-inline-flex">
    <a style="width: 80px" class="btn btn-secondary m-1" href="{{ path('secure_crud_tag_index') }}">Regresar</a>
    <a style="width: 80px" class="btn btn-warning m-1" href="{{ path('secure_crud_tag_edit', {'id': tag.id}) }}">Editar</a>
    {{ include('secure/crud_tag/_delete_form.html.twig') }}
</div>
{% endblock %}
