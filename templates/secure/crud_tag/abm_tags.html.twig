{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>


		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_tag_new') }}">Nueva etiqueta</a>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 0, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id. &nbsp;
							</th>

							<th>
								Nombre &nbsp;
							</th>

							<th>
								Slug &nbsp;
							</th>

							<th class="text-center">
								Visible &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for tag in tags %}

							<tr>

								<td class="text-center">
									{{tag.id}}
								</td>

								<td>
									{{tag.name}}
								</td>

								<td>
									{{tag.slug}}
								</td>

								<td class="text-center">
									<a style="font-size:16px" data-status="{{tag.visible ? 'on':'off'}}" data-slug="/secure/tag/updateVisible/tag" data-id="{{tag.id}}" class="text-{{tag.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
										<i class="fas fa-toggle-{{tag.visible ? 'on':'off'}}"></i>
									</a>
								</td>

								<td class="text-center">
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_tag_edit', {'id': tag.id}) }}" title="Editar etiqueta">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
