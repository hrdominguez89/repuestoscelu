{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_category_new') }}">Nueva categoría</a>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 0, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id. &nbsp;
							</th>

							<th>
								Nombre &nbsp;
							</th>

							<th class="text-center">
								Nomenclatura &nbsp;
							</th>

							<th>
								Slug &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Imagen &nbsp;
							</th>

							<th class="text-center">
								Principal &nbsp;
							</th>


							<th class="text-center">
								Visible &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for category in categories %}

							<tr>

								<td class="text-center">
									{{category.id}}
								</td>

								<td>
									{{category.name}}
								</td>

								<td class="text-center">
									{{category.nomenclature}}
								</td>

								<td>
									{{category.slug}}
								</td>

								<td class="text-center">
									{% if category.image %}
										<img class="img-fluid" style="width:100px;max-height:100px;" alt="Imagen" src="{{ asset(category.image) }}"/>
									{% else %}
										<img class="img-fluid" style="width:100px;max-height:100px;" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/>
									{% endif %}
								</td>

								<td class="text-center">
									{{category.principal ? 'Si':'No'}}
								</td>

								<td class="text-center">
									<a style="font-size:16px" data-status="{{category.visible ? 'on':'off'}}" data-slug="/secure/category/updateVisible/category" data-id="{{category.id}}" class="text-{{category.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
										<i class="fas fa-toggle-{{category.visible ? 'on':'off'}}"></i>
									</a>
								</td>


								<td class="text-center">
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_category_edit', {'id': category.id}) }}" title="Editar categoría">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
