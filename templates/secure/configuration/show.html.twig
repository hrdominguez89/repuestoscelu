{% extends 'home/index.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{parent()}}
	<h1>{{title}}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Imagen</th>
				{% if configuration.image %}
					<td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ configuration.image }}"/></td>
				{% else %}
					<td><img class="img-fluid rounded " width="120px" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
				{% endif %}
			</tr>
			<tr>
				<th>Título</th>
				<td>{{ configuration.title }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ configuration.slug }}</td>
			</tr>
			<tr>
				<th>Descripción</th>
				<td>{{ configuration.description }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-inline-flex">

		<a class="btn btn-secondary w-100 m-1" href="{{ path('secure_configuration_index') }}">Regresar</a>

		<a class="btn btn-warning m-1" href="{{ path('secure_configuration_edit', {'id': configuration.id}) }}">Editar</a>

		{{ include('secure/configuration/_delete_form.html.twig') }}

	</div>

{% endblock %}
