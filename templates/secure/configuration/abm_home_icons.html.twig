{% extends 'home/index.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_configuration_new') }}">Nuevo icono</a>
		</div>

	</div>
	<div class="row mt-2">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_simple" class="table table-striped table-sm nowrap">
					<thead>
						<tr>
							<th data-orderable="false" style="width:70px;">Imagen &nbsp;</th>
							<th>Título &nbsp;</th>
							<th>Descripción &nbsp;</th>
							<th data-orderable="false">Acciones &nbsp;</th>
						</tr>
					</thead>
					<tbody>
						{% for configuration in configurations %}
							<tr>
								{% if configuration.image %}
									<td><img class="img-fluid" alt="Imagen" src="{{ configuration.image }}"/></td>
								{% else %}
									<td><img class="img-fluid" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
								{% endif %}
								<td>{{ configuration.title }}</td>
								<td>{{ configuration.description }}</td>
								<td style="width: 10px;">
									<a style="font-size:16" title="Ver" class="m-2" href="{{ path('secure_configuration_show', {'id': configuration.id}) }}">
										<i class="fas fa-eye text-primary"></i>
									</a>
									<a style="font-size:16" title="Editar icono" class="m-2" href="{{ path('secure_configuration_edit', {'id': configuration.id}) }}">
										<i class="fas fa-edit text-warning"></i>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">no se encontraron datos</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
